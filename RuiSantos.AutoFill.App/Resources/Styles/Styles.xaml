<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <!-- Colors -->
    <Color x:Key="PrimaryColor">#1A73E8</Color>
    <Color x:Key="PrimaryColorDark">#0D47A1</Color>
    <Color x:Key="BackgroundColor">#F9FBFD</Color>
    <Color x:Key="SurfaceColor">White</Color>
    <Color x:Key="SearchBarColor">#F1F3F4</Color>
    
    <Color x:Key="TextPrimaryColor">#202124</Color>
    <Color x:Key="TextSecondaryColor">#5F6368</Color>
    <Color x:Key="TextTertiaryColor">#80868B</Color>
    
    <Color x:Key="BorderColor">#DADCE0</Color>
    <Color x:Key="ErrorColor">#D93025</Color>
    
    <!-- Shadows -->
    <Shadow x:Key="SmallElevation" Brush="#22000000" Offset="0,1" Radius="2" />
    <Shadow x:Key="MediumElevation" Brush="#33000000" Offset="0,2" Radius="4" />
    <Shadow x:Key="LargeElevation" Brush="#33000000" Offset="0,4" Radius="5" />
    
    <!-- Border Shapes -->
    <RoundRectangle x:Key="SmallRoundedCorners" CornerRadius="4" />
    <RoundRectangle x:Key="MediumRoundedCorners" CornerRadius="8" />
    <RoundRectangle x:Key="LargeRoundedCorners" CornerRadius="12" />
    <RoundRectangle x:Key="CircularShape" CornerRadius="24" />
    
    <!-- Typography -->
    <Style x:Key="HeadingStyle" TargetType="Label">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimaryColor}" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>
    
    <Style x:Key="TitleStyle" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimaryColor}" />
    </Style>
    
    <Style x:Key="SubtitleStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondaryColor}" />
        <Setter Property="LineBreakMode" Value="TailTruncation" />
        <Setter Property="MaxLines" Value="1" />
    </Style>
    
    <Style x:Key="CaptionStyle" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="{StaticResource TextTertiaryColor}" />
    </Style>
    
    <Style x:Key="EmptyTitleStyle" TargetType="Label">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondaryColor}" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>
    
    <Style x:Key="EmptySubtitleStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource TextTertiaryColor}" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>
    
    <!-- Borders -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Stroke" Value="Transparent" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceColor}" />
        <Setter Property="StrokeShape" Value="{StaticResource MediumRoundedCorners}" />
        <Setter Property="Margin" Value="0,4" />
        <Setter Property="Shadow" Value="{StaticResource SmallElevation}" />
    </Style>
    
    <Style x:Key="SearchBarStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource SearchBarColor}" />
        <Setter Property="Stroke" Value="{StaticResource SearchBarColor}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="{StaticResource CircularShape}" />
        <Setter Property="Padding" Value="12,0" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="HorizontalOptions" Value="Fill" />
    </Style>
    
    <!-- Entry -->
    <Style x:Key="SearchEntryStyle" TargetType="Entry">
        <Setter Property="Placeholder" Value="Search forms" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextSecondaryColor}" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimaryColor}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>
    
    <!-- Buttons -->
    <Style x:Key="IconButtonStyle" TargetType="ImageButton">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="WidthRequest" Value="24" />
        <Setter Property="HeightRequest" Value="24" />
        <Setter Property="Padding" Value="0" />
    </Style>
    
    <Style x:Key="CircularIconButtonStyle" TargetType="ImageButton">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="WidthRequest" Value="40" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="Padding" Value="10" />
    </Style>
    
    <Style x:Key="FloatingActionButtonStyle" TargetType="Button">
        <Setter Property="Text" Value="+" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="WidthRequest" Value="56" />
        <Setter Property="HeightRequest" Value="56" />
        <Setter Property="CornerRadius" Value="28" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Shadow" Value="{StaticResource LargeElevation}" />
        <Setter Property="VerticalOptions" Value="End" />
        <Setter Property="HorizontalOptions" Value="End" />
        <Setter Property="Margin" Value="0,0,16,16" />
    </Style>
    
    <!-- Layout -->
    <Style x:Key="HeaderLayoutStyle" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceColor}" />
        <Setter Property="Padding" Value="20,10" />
    </Style>
    
    <Style x:Key="ContentLayoutStyle" TargetType="Grid">
        <Setter Property="Padding" Value="20,16" />
    </Style>
    
    <Style x:Key="CardContentStyle" TargetType="Grid">
        <Setter Property="Padding" Value="16" />
    </Style>
    
    <Style x:Key="HorizontalActionLayoutStyle" TargetType="HorizontalStackLayout">
        <Setter Property="Spacing" Value="8" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>
</ResourceDictionary>